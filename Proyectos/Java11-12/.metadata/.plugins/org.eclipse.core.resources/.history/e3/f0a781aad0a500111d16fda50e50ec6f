import java.util.*;

public class test{
	
	public static boolean isIgual(colad c,pilad p){
		boolean igual = false;
		if(c.toString(c.pop()).compareToIgnoreCase(p.toString(p.pop()))==0)
			igual = true;
		
		return igual;
	}

	public static void main(String[] args) {
		
		pilad p = new pilad();
		colad c = new colad();
		ArrayList<Character> ch = new ArrayList<Character>();
		Scanner lector = new Scanner(System.in);
		String cadena = "";
		int j = 0;
		
		
		System.out.print("Introduzca palindromo:");
		cadena = lector.nextLine();
		
		
		while(j<cadena.length()){
			ch.add(cadena.charAt(j));
			if(cadena.charAt(j)!=' '){
				c.push(ch.get(j));
				p.push(ch.get(j));
			}
			j++;
		}
		if(isIgual(c,p)){
			System.out.println("La frase o palabra \""+cadena+"\" es un palindromo");
		}else{
			System.out.println("La frase o palabra "+cadena+" no es un palindromo");
		}
		
	}
}