import java.util.*;

public class test{
	
	public static boolean isIgual(colad c,pilad p){
		boolean igual = false;
		if(c.pop()==p.pop())
			igual = true;
		
		return igual;
	}

	public static void main(String[] args) {
		
		pilad p = new pilad();
		colad c = new colad();
		ArrayList<Character> ch = new ArrayList<Character>();
		Scanner lector = new Scanner(System.in);
		String cadena = "";
		int j = 0;
		
		
		System.out.print("Introduzca palindromo:");
		cadena = lector.next();
		

		while(j<cadena.length()){
			ch.add(cadena.charAt(j));
			if(cadena.charAt(j)!=' '){
				c.push(ch.get(j));
				p.push(ch.get(j));
			}
			j++;
		}
		System.out.println("La palabra "+cadena+" palidromo "+isIgual(c,p));
	}
}