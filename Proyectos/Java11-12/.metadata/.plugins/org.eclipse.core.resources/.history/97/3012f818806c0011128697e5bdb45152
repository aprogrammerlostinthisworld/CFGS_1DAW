#include <iostream>
using namespace std;
int main() {
	unsigned n;
	cout<<"Introduzca la altura:"<<endl;
	cin>>n;
	for(unsigned linea=1, linea<=n,linea++){
		escribir blancos(n-linea);
		escribir asteriscos(linea);
		cout<<endl;
	}
	cout << "Asteriscos" << endl; // prints Asteriscos
	return 0;
}
void escribir blancos (unsigned blanco){
	for(unsigned i=1, i<=blanco, i++){
		cout<<" ";
	}
}
void escribi asteriscos (unsigned asteriscos){
	for(unsigned i=1,i<=asteriscos,i++)
		cout<<"*";
	}
}
