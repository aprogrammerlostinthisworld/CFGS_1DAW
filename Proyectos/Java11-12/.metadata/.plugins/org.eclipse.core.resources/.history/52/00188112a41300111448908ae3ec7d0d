package ejercicios_propuestos;

public class decimaltoromano {

	public void decimalToRomano(int decimal){
		if((decimal>=3000)&&(decimal<4000)){
			for(int q=0;q<=2;q++){
				System.out.print("M");
			}
		if((decimal>=2000)&&(decimal<3000)){
			for(int w=0;w<=1;w++){
				System.out.print("M");
			}
		}else{
			System.out.print("M");
		}
		}
	}
}
