public class colad {
	
	public class CElemento{
		private char dato;
		private CElemento siguiente;
		
		public CElemento(char d){
			this.dato=d;
			siguiente=null;
		}
	}

	private int numElem;
	private CElemento cola;
	
	public colad(){
		numElem = 0;
	}
	
	public int size(){
		return numElem;
	}
	
	public void push(char c){		//anadir
		CElemento ch = new CElemento(c);
		if(!colaVacia()){
			ch.siguiente = cola.siguiente;
			cola.siguiente = ch;
		}else{
			cola = ch;
			cola.siguiente = ch;
		}
		cola = cola.siguiente;
		numElem++;
	}
	
	public char pop(){				//obtener
		CElemento aux = cola.siguiente;
		char obj = aux.dato;

		if(colaVacia()){
			System.out.println("Lista vacia");
		}else{
			if(aux == cola){
				cola = null;
			}else{
				cola.siguiente = aux.siguiente;
			}
		}
		numElem--;
		return obj;
	}
	
	public boolean colaVacia(){
		return (numElem == 0);
	}
	
	public boolean colaLlena(){
		return false;
	}
	
	public String toString(char ch){
		String cadena = "";
		cadena += cadena.valueOf(ch);
		return cadena;
	}
}